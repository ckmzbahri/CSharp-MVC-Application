@using mvcodev.Models.Data
@model List<duyurular>
@{
    ViewBag.Title = "duyurular";
    Layout = "~/Views/Shared/admin.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>İD</th>
        <th> DUYURU BAŞLIĞI</th>
        <th> DUYURU İÇERİĞİ</th>
        <th> FOTOĞRAF</th>
        <th> SİL/GÜNCELLE </th>
        
    </tr>

    <tbody>
        @foreach (var duyuru in Model)
        {
            <tr>
                <td>@duyuru.id</td>
                <td>@duyuru.baslik</td>
                <td>@duyuru.icerik</td>
                <td>@duyuru.resim</td>
                <td>
                    <a href="/admin/duyurusil/@duyuru.id" class=" btn btn-danger">SİL</a>
                    <a href="/admin/guncelduy/@duyuru.id" class=" btn btn-success">GÜNCELLE</a>
                </td>
                
            </tr>
        }
    </tbody>
</table>
<a href="/admin/yeniduyuru/" class="btn btn-primary">YENİ DUYURU EKLE</a>


