@using mvcodev.Models.Data
@model List<hakkimizda>
@{
    ViewBag.Title = "anasayfa";
    Layout = "~/Views/Shared/admin.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th> İD</th>
        <th> HAKKIMIZDA İÇERİK</th>
        <th> SİL/GÜNCELLE </th>
    </tr>

    <tbody>
        @foreach (var hak in Model)
        {
            <tr>
                <td>@hak.metin_id</td>
                <td>@hak.metin</td> 
                <td><a href="/admin/SIL/@hak.metin_id" class=" btn btn-danger">SİL</a>
                <a href="/admin/guncelhak/@hak.metin_id" class=" btn btn-success">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/admin/yenihakkimiz/" class="btn btn-primary">YENİ İÇERİK EKLE</a>




