        <input type="text" class="form-control" name="kullanici_adi" />
        @Html.ValidationMessageFor(m => m.kullanici_adi, "", new { @style = "color-red" })<br />
        <label>ŞİFRE</label>
        <input type="text" class="form-control" name="sifre" />
        @Html.ValidationMessageFor(m => m.sifre, "", new { @style = "color-red" })<br />
        <label>ŞİFRE TEKRAR</label>
        <input type="text" class="form-control" />
