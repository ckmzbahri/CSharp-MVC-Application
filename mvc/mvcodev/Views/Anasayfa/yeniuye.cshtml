        @Html.ValidationMessageFor(m => m.mail, "", new { @style = "color-red" })<br />
        <label>TARİH</label>
        <br />
        <input type="datetime"  class="datetimepicker" name="tarih"/>
        @Html.ValidationMessageFor(m => m.tarih, "", new { @style = "color-red" })<br />
        <br />
        <label>CİNSİYET</label>
        <input type="text" class="form-control" name="cinsiyet" />
        @Html.ValidationMessageFor(m => m.cinsiyet, "", new { @style = "color-red" })<br />
